package com.ht.service.inter.system.document.template;

import java.util.List;

import com.ht.persistence.model.system.document.template.Model;

/**
 * 模板service
 * @author 平子金
 * */
public interface ModelService {

	/**
	 *保存通知
	 * @param Model Model实体
	 */
  public void addModel(String model) throws Exception;
  
  	/**
	 *修改通知
	 * @param Model Model实体
	 */
  public void modifyModel(String model) throws Exception;
  
  	/**
	 *删除通知
	 * @param Model Model实体
	 */
  public void delModel(String id) throws Exception;
  
  	/**
	 *查询所有通知
	 * @param Model Model实体
	 */
  public List<Model> getModel() throws Exception;
  
  	/**
	 *查询一条通知
	 * @param Model Model实体
	 */
  public Model getModel(String id) throws Exception;
}
