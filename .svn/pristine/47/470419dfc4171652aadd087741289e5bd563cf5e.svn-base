package com.ht.front.model;


/**
 * 隐藏域
 * @author Administrator
 * @date 2016/10/15
 */
public class InputHidden extends Base{
	/**
	 * 构造器
	 * @param id id属性
	 * @param type type属性
	 * @param name name属性
	 * @param value value属性
	 * @param css class属性
	 * @param placeholder placeholder属性
	 */
	protected InputHidden(String id, String value) {
		super("hidden", id, null,value,null,null);
	}
	
	/**
	 * 获取一个隐藏域
	 * @param id 隐藏域ID
	 * @param value 隐藏域值
	 * @return 隐藏域
	 */
	public static InputHidden getInstance(String id, String value){
		return new InputHidden(id,value);
	}
}
