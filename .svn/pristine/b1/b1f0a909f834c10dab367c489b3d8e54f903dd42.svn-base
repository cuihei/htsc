<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.background.dicdata.defecttype.DefectType" table="DEFECTIVE_TYPE">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>      
        <property name="typeName" type="java.lang.String">
            <column name="type_name" />
        </property>
        <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
        
         <many-to-one name="charttype" column="chart_type"  fetch="select" cascade="none" class="com.ht.persistence.model.background.dicdata.basedata.BaseData" lazy="false" 
        not-found="ignore">
        </many-to-one> 
       	
    </class>
    <query name="getDefectTypeList">
    	<![CDATA[ from DefectType]]>
    </query>
    
    <query name="getDefectTypeById">
    	<![CDATA[ from DefectType where id = :id]]>
    </query>
    
    <query name="getDefectTypeListByCharttypeId">
    	<![CDATA[ from DefectType where charttype.id = :id]]>
    </query>
    
    <query name="getDefectTypeByCtIdAndTypeName">
    	<![CDATA[ from DefectType where charttype.id = :charttypeId and typeName = :typeName]]>
    </query>
</hibernate-mapping>
