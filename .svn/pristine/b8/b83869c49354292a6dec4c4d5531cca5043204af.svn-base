<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.background.dicdata.basedata.BaseData" table="BASE_DATA">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="code" type="java.lang.String">
            <column name="code" />
        </property>
        <property name="value" type="java.lang.String">
            <column name="value" />
        </property>
        <property name="typeId" type="java.lang.String">
            <column name="type_id" />
        </property>
        <property name="typeName" type="java.lang.String">
            <column name="type_name" />
        </property>
         <property name="num" type="java.lang.String">
            <column name="num" />
        </property>
       	<property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getBaseData">
    	<![CDATA[ from BaseData order by creationDate desc]]>
    </query>
    
    <query name="getBaseDataById">
    	<![CDATA[ from BaseData where id= :id]]> 
    </query>
    
    <sql-query name="delCatalogDetail">
    	<![CDATA[delete from CatalogDetail where categoryId= :id]]> 
    </sql-query>
    
    <query name="getBaseDataByCode">
    	<![CDATA[from BaseData where code= :code]]> 
    </query>
    <query name="getBaseDataByType">
    	<![CDATA[from BaseData where typeName= :name order by code]]> 
    </query>
    <query name="getBaseDataByTypeId">
    	<![CDATA[from BaseData where typeId= :typeId order by num]]> 
    </query>
     <query name="checkPortIfExist">
    	<![CDATA[from BaseData where typeId= :typeId and value= :value]]> 
    </query>
</hibernate-mapping>
