<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="rootAppender" class="org.apache.log4j.ConsoleAppender">  
        <layout class="org.apache.log4j.PatternLayout">  
            <param name="ConversionPattern" value="[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n" />  
        </layout>  
    </appender>  
	<appender name="SystemAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/devenv/log/server.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">  
			<param name="ConversionPattern" value="[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n" />  
		</layout>
	</appender>
	<appender name="ErrorAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/devenv/log/error.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">  
			<param name="ConversionPattern" value="[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n" />  
		</layout>
	</appender>
	<appender name="FatalAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/devenv/log/fatal.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">  
			<param name="ConversionPattern" value="[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n" />  
		</layout>
	</appender>
	
    <logger name="SystemLogger" additivity="false">
		<level value ="DEBUG"/>
		<appender-ref ref="SystemAppender" />
	</logger>
	<logger name="ErrorLogger" additivity="false">
		<level value ="DEBUG"/>
		<appender-ref ref="ErrorAppender" />
	</logger>
	<logger name="FatalLogger" additivity="false">
		<level value ="DEBUG"/>
		<appender-ref ref="FatalAppender" />
	</logger>
	
	<root>  
		<priority value ="DEBUG" />  
		<appender-ref ref="rootAppender" />
    </root>  
</log4j:configuration>