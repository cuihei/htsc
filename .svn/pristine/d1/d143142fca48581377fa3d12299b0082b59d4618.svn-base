<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.datum.bookinfo.ViewBookInfo" table="V_BOOK_INFO">

        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        
        <property name="bookName" type="java.lang.String">
            <column name="book_name" />
        </property>
        <property name="oneSubClass" type="java.lang.String">
            <column name="one_subclass" />
        </property>
        <property name="twoSubClass" type="java.lang.String">
            <column name="two_subclass" />
        </property>
        <property name="inventoryNum" type="java.lang.String">
            <column name="inventory_num" />
        </property>
        <property name="publishDate" type="date">
            <column name="publish_date" />
        </property>
        <property name="version" type="java.lang.String">
            <column name="version" />
        </property>
        <property name="publishUnit" type="java.lang.String">
            <column name="publish_unit" />
        </property>
        <property name="state" type="java.lang.String">
            <column name="state" />
        </property>
        <property name="entry" type="java.lang.String">
            <column name="entry" />
        </property>
        <property name="reviewers" type="java.lang.String">
            <column name="reviewers" />
        </property>
         <property name="code" type="java.lang.String">
            <column name="code" />
        </property>
        <property name="total" type="java.lang.String">
            <column name="total" />
        </property>
        <property name="canBorrowing" type="java.lang.String">
            <column name="can_borrowing" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="status" />
        </property>
        <property name="remarks" type="java.lang.String">
            <column name="remarks" />
        </property>
       <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getAllBookInfo">
    	<![CDATA[ from ViewBookInfo order by creationDate desc]]>
    </query>
    <query name="getViewBookInfoById">
    	<![CDATA[ from ViewBookInfo where id = :id]]>
    </query>
</hibernate-mapping>
