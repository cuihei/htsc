<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.background.dicdata.defectitem.DefectItem" table="DEFECTIVE_ITEM">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="item" type="java.lang.String">
            <column name="item" />
        </property>
        <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
       	
       	<many-to-one name="charttype" column="chart_type"  fetch="select" cascade="none" class="com.ht.persistence.model.background.dicdata.basedata.BaseData" lazy="false" 
        not-found="ignore">
        </many-to-one> 
        
       	 <many-to-one name="type" column="defect_type"  fetch="select" cascade="none" class="com.ht.persistence.model.background.dicdata.defecttype.DefectType" lazy="false" 
        not-found="ignore">
        </many-to-one> 
    </class>
    <query name="getDefectItemListByDefectTypeId">
    	<![CDATA[ from DefectItem where type.id = :id]]>
    </query>
    
    <query name="getDefectItemList">
    	<![CDATA[ from DefectItem order by creationDate desc]]>
    </query>
    
    <query name="getDefectByItemId">
    	<![CDATA[ from DefectItem where id = :id]]>
    </query>
    
    <query name="getDefectByCtIdAndDtIdAndItem">
    	<![CDATA[ from DefectItem where charttype.id = :charttypeId and type.id = :defecttypeId and item = :item]]>
    </query>
    
    <query name="getDefectItemByDefectTypeId">
    	<![CDATA[ from DefectItem where type.id = :defecttypeId]]>
    </query>
    
</hibernate-mapping>
