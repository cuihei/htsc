<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.background.monitor.accesslog.Syslog" table="SYSLOG">

        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="handleId" type="java.lang.String">
            <column name="handle_id" />
        </property>
        <property name="handleIp" type="java.lang.String">
            <column name="handle_ip" />
        </property>
        <property name="handleBehavior" type="java.lang.String">
            <column name="handle_behavior" />
        </property>
        <property name="handleResult" type="java.lang.String">
            <column name="handle_result" />
        </property>
        <property name="handleTime" type="java.lang.String">
            <column name="handle_time" />
        </property>
        <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getSyslog">
    	<![CDATA[ from Syslog order by creationDate desc]]>
    </query>
    <query name="getSyslogById">
    	<![CDATA[ from Syslog where id= :id]]> 
    </query>
</hibernate-mapping>
