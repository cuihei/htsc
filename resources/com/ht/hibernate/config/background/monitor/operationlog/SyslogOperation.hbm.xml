<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.background.monitor.operationlog.SyslogOperation" table="SYSLOG_OPERATION">

        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="operatorId" type="java.lang.String">
            <column name="operator_id" />
        </property>
        <property name="operatorIp" type="java.lang.String">
            <column name="operator_ip" />
        </property>
        <property name="operationBehavior" type="java.lang.String">
            <column name="operation_behavior" />
        </property>
        <property name="operationResult" type="java.lang.String">
            <column name="operation_result" />
        </property>
        <property name="operationObject" type="java.lang.String">
            <column name="operation_object" />
        </property>
        <property name="operationTime" type="java.lang.String">
            <column name="operation_time" />
        </property>
       <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getSyslogOperation">
    	<![CDATA[ from SyslogOperation order by operationTime desc]]>
    </query>
    <query name="getSyslogOperationById">
    	<![CDATA[ from SyslogOperation where id= :id]]> 
    </query>
</hibernate-mapping>
