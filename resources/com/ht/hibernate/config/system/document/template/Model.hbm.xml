<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.system.document.template.Model" table="MODEL">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="code" type="java.lang.String">
            <column name="code" />
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" />
        </property>
        <property name="model_type_id" type="java.lang.String">
            <column name="model_type_id" />
        </property>
        <property name="model_type_name" type="java.lang.String">
            <column name="model_type_name" />
        </property>
        <property name="path" type="java.lang.String">
            <column name="path" />
        </property>
         <property name="model_item_id" type="java.lang.String">
            <column name="model_item_id" />
        </property>
        <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getModel">
    	<![CDATA[ from Model]]>
    </query>
    <query name="getModelById">
    	<![CDATA[ from Model where id= :id]]> 
    </query>
</hibernate-mapping>
