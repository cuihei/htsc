<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.system.workflow.process.ProcessTaskRelation" table="PROCESS_TASK_RELATION">

        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="assigned" />
        </id>
       
        <property name="processDefId" type="java.lang.String">
            <column name="PROCESS_DEF_ID" />
        </property>
        
        <property name="processDefKey" type="java.lang.String">
            <column name="PROCESS_DEF_KEY" />
        </property>
        
        <property name="taskDefId" type="java.lang.String">
            <column name="TASK_DEF_ID" />
        </property>
	
		<property name="relationId" type="java.lang.String">
            <column name="RELATION_ID" />
        </property>
	
		  <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="findByTaskDefId">
    	<![CDATA[ from ProcessTaskRelation where taskDefId= :taskDefId and processDefKey= :processDefKey]]> 
    </query>
</hibernate-mapping>
