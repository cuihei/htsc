<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ht.persistence.model.system.issue.YearIssue" table="YEAR_ISSUE">
        <id name="id" type="java.lang.String">
            <column name="ID" />
            <generator class="assigned" />
        </id>
        <property name="issue" type="java.lang.String">
            <column name="ISSUE" />
        </property>
        <property name="year" type="java.lang.String">
            <column name="YEAR" />
        </property>
        <property name="beginDate" type="date">
            <column name="BEGIN_DATE" />
        </property>
        <property name="endDate" type="date">
            <column name="END_DATE" />
        </property>
              <property name="creator" type="java.lang.String">
            <column name="creator" />
        </property>
        <property name="creationDate" type="timestamp">
            <column name="creation_date" />
        </property>
        <property name="modifier" type="java.lang.String">
            <column name="modifier" />
        </property>
        <property name="modifyDate" type="timestamp">
            <column name="modify_date" />
        </property>
    </class>
    <query name="getAllYearIssues">
    	<![CDATA[ from YearIssue order by creationDate desc]]>
    </query>
    <query name="getYearIssueById">
    	<![CDATA[ from YearIssue where id = :id]]>
    </query>
    <query name="getYearIssueByIssue">
    	<![CDATA[ from YearIssue where issue = :issue]]>
    </query>
    <query name="getYearIssueByDate">
    	<![CDATA[ from YearIssue where (beginDate > :beginDate and endDate < :endDate) or (beginDate < :beginDate and endDate > :endDate) or (endDate > :beginDate and beginDate < :endDate) ]]>
    </query>
    
   
</hibernate-mapping>
